<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/mainActivity">

    <fragment
        android:id="@+id/mainActivity"
        android:name="com.example.virginmoney.ui.MainActivity"
        android:label="activity_main"
        tools:layout="@layout/activity_main" >

    </fragment>

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.virginmoney.ui.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_roomsFragment"
            app:destination="@id/roomsFragment" />
        <action
            android:id="@+id/action_homeFragment_to_peopleFragment"
            app:destination="@id/peopleFragment" />
    </fragment>

    <fragment
        android:id="@+id/roomsFragment"
        android:name="com.example.virginmoney.ui.RoomsFragment"
        android:label="rooms"
        tools:layout="@layout/rooms_fragment" />

    <fragment
        android:id="@+id/peopleFragment"
        android:name="com.example.virginmoney.ui.PeopleFragment"
        android:label="people"
        tools:layout="@layout/people_fragment" />





</navigation>
